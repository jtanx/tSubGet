STYLE DS_CENTER|WS_MINIMIZEBOX|WS_SYSMENU|WS_CAPTION
BEGIN
	LISTBOX IDL_INPUT, 5, 5, 210, 100, LBS_EXTENDEDSEL|LBS_NOINTEGRALHEIGHT|WS_VSCROLL|WS_HSCROLL
	PUSHBUTTON "&Add", ID_LISTADD, 220, 5, 25, 15 
	PUSHBUTTON "&Del", ID_LISTDEL, 220, 22, 25, 15
	PUSHBUTTON "&Clear", ID_LISTCLEAR, 220, 47.5, 25, 15
	PUSHBUTTON "U&p", ID_LISTUP, 220, 73, 25, 15 
	PUSHBUTTON "Dow&n", ID_LISTDOWN, 220, 90, 25, 15 

	CHECKBOX "S&et output folder", ID_SETFOLDER, 5, 105, 240, 13
	EDITTEXT IDE_OUTDIR,5, 120, 190, 14,ES_AUTOHSCROLL|ES_READONLY
	PUSHBUTTON "&Browse...",ID_BROWSE,200, 120, 45, 15, WS_DISABLED

	AUTOCHECKBOX "Add colou&r tags", ID_ADDCOLOUR, 5, 138, 70, 10 
	AUTOCHECKBOX "Overwrite output &without prompt", ID_NOPROMPT, 80, 138, 115, 10

