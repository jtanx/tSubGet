	BEGIN
		MENUITEM "&Stay on top", ID_TOPMOST
		MENUITEM "&Exit", IDOK
	END

	POPUP "T&ools"
	BEGIN
		MENUITEM "&Customise colour values", ID_CUSTOMCOLOURS
